<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/titleView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Title here"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/startDateView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:text="StartDate here"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/eventStartHeader"
            app:layout_constraintTop_toTopOf="@+id/eventStartHeader" />

        <TextView
            android:id="@+id/eventStartHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/event_start"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/startDateView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titleView" />

        <TextView
            android:id="@+id/eventEndHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/event_end"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/endDateView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/eventStartHeader" />

        <TextView
            android:id="@+id/endDateView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EndDate here"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/eventEndHeader"
            app:layout_constraintStart_toStartOf="@+id/startDateView"
            app:layout_constraintTop_toTopOf="@+id/eventEndHeader" />

        <TextView
            android:id="@+id/startTimeView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="StartTime here"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/startDateView"
            app:layout_constraintTop_toTopOf="@+id/startDateView" />

        <TextView
            android:id="@+id/endTimeView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="EndTime here"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/endDateView"
            app:layout_constraintTop_toTopOf="@+id/endDateView" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>